{
  "name": "ptilms-api",
  "version": "1.0.0",
  "description": "PTiLMS API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "db:migrate": "dotenv -e .env -- npx sequelize db:migrate",
    "db:seed": "dotenv -e .env -- npx sequelize db:seed:all",
    "db:reset": "dotenv -e .env -- npx sequelize db:migrate:undo:all && dotenv -e .env -- npx sequelize db:migrate && dotenv -e .env -- npx sequelize db:seed:all",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "sequelize",
    "express",
    "api",
    "mysql"
  ],
  "author": "Ifitis Prosper",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "awilix": "^12.0.5",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "glob": "^11.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.0",
    "nodemailer": "^6.10.0",
    "redis": "^4.7.0",
    "rimraf": "^6.0.1",
    "sanitize-filename": "^1.6.3",
    "sequelize": "^6.37.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@types/jest": "^29.5.14",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.1.0"
  }
}
