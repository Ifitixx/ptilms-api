# ptilms-api/.env.production
NODE_ENV=production
PORT=443 # Or another appropriate port for production

JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_HERE # Replace with a strong, unique secret
JWT_REFRESH_SECRET=YOUR_PRODUCTION_JWT_REFRESH_SECRET_HERE # Replace with a strong, unique secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

CORS_ORIGINS=https://your-production-domain.com # Replace with your actual production domain
CORS_METHODS=GET,POST,PUT,DELETE,PATCH

DB_USER=your_production_db_user # Replace with your production database user
DB_PASSWORD=your_production_db_password # Replace with your production database password
DB_NAME=your_production_db_name # Replace with your production database name
DB_HOST=your_production_db_host # Replace with your production database host (e.g., an IP address or domain)
DATABASE_DIALECT=mysql

REDIS_HOST=your_production_redis_host # Replace with your production Redis host
REDIS_PORT=6379 # Or your production Redis port
REDIS_PASSWORD=your_production_redis_password # Replace with your production Redis password

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

SALT_ROUNDS=12